{
  "root": true,
  "name": "toda",
  "version": "1.0.0",
  "repository": "https://github.com/davidchak/toda.git",
  "author": "David <davidchak@yandex.ru>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "<14.x"
  },
  "eslintConfig": {
    "root": true
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "dev": "yarn workspaces dev",
    "test": "yarn workspaces test",
    "build": "yarn workspaces build",
    "dev:front": "yarn workspace @toda/front dev",
    "test:front": "yarn workspace @toda/front test",
    "build:front": "yarn workspace @toda/front build",
    "dev:back": "yarn workspace @toda/back dev",
    "test:back": "yarn workspace @toda/back test",
    "build:back": "yarn workspace @toda/back build"
  }
}
